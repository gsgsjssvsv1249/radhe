{
  "version": 2,
  "builds": [
    {
      "src": "api.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": [
          "VTSController.py",
          "personality.txt",
          "message_history.txt"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/api.py",
      "methods": ["GET"]
    },
    {
      "src": "/chat",
      "dest": "/api.py",
      "methods": ["POST"]
    },
    {
      "src": "/upload_voice",
      "dest": "/api.py",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "status": 404,
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api.py"
    }
  ],
  "env": {
    "PYTHONPATH": "./"
  }
}
